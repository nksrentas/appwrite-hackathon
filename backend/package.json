{
  "name": "ecotrace-backend",
  "version": "1.0.0",
  "description": "EcoTrace real-time carbon footprint tracking backend with Appwrite",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/index.js",
    "deploy": "appwrite deploy",
    "test": "jest",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\""
  },
  "dependencies": {
    "axios": "^1.5.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "joi": "^17.9.0",
    "node-appwrite": "^13.0.0",
    "redis": "^4.6.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "appwrite-cli": "^4.1.0",
    "eslint": "^9.35.0",
    "jest": "^29.6.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.0"
  },
  "keywords": [
    "carbon-tracking",
    "appwrite",
    "real-time",
    "sustainability"
  ],
  "author": "EcoTrace Team",
  "license": "MIT"
}
